 */
var int vValueCurrent=1
var int vValueCurrent=1
var int vValueCurrent2=1
//var Timer vTimerSonosCONNECT = null
//
/* Seconds Minutes Hours  Day-of-Month Month   Day-of-Week  Year (optional field)
 * 0-59,*  0-59,*  0-23,* 0-31,*,?     0-11,*  0-6,*,?           
 * 0       0       16     ?            *       MON-FRI       *
 * */
//
rule "WallMote Quad 2"
when
  Item dWallMoteQuad2 changed
then
	if (ZW130WallMoteQuadSceneNumber.state == 1.0) {
		logDebug("Sonos","------ Sonos CONNECT ON by WallMot ----------")
		SonosOneKucheControl.sendCommand(PLAY)
//	} else if (ZW130WallMoteQuadSceneNumber.state == 1.2) {
//		logDebug("Sonos","------ Sonos CONNECT OFF by WallMot ----------")
//		SonosOneKucheControl.sendCommand(PAUSE)
	} else if (ZW130WallMoteQuadSceneNumber.state == 2.0) {
		logDebug("Sonos","------ Sonos CONNECT OFF by WallMot ----------")
		SonosOneKucheControl.sendCommand(PAUSE)
//	} else if (ZW130WallMoteQuadSceneNumber.state == 2.2) {
//		logDebug("HUE","------ HUE bulb OFF - 2.2 -  by WallMot ----------")
//		dSwitch_HUE_EZ_L.sendCommand(OFF)
	}
	if (ZW130WallMoteQuadSceneNumber.state == 3.0)
		SonosOneKucheRadio.sendCommand("NDR 2 (Pop)")
	if (ZW130WallMoteQuadSceneNumber.state == 3.2) {
		vValueCurrent = (SonosOneKucheVolume.state as DecimalType).intValue
		SonosOneKucheVolume.sendCommand(vValueCurrent + 10)
	} else if (ZW130WallMoteQuadSceneNumber.state == 4.0) {
		SonosOneKucheStop.sendCommand(ON)		
	} else if (ZW130WallMoteQuadSceneNumber.state == 4.2) {
		vValueCurrent2 = (SonosOneKucheVolume.state as DecimalType).intValue
		SonosOneKucheVolume.sendCommand(vValueCurrent2 - 10)
	}
end